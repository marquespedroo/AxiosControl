# Environment Configuration
# Copy this file to .env.local and fill in the values

# ===================================
# APPLICATION
# ===================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===================================
# SUPABASE
# ===================================
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Database URL (for migrations)
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# ===================================
# AUTHENTICATION
# ===================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-min-32-chars

# JWT Secret (for custom auth)
JWT_SECRET=your-jwt-secret-min-32-chars
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# ===================================
# STORAGE
# ===================================
# Supabase Storage bucket names
NEXT_PUBLIC_STORAGE_BUCKET_ATTACHMENTS=attachments
NEXT_PUBLIC_STORAGE_BUCKET_LOGOS=clinic-logos
NEXT_PUBLIC_STORAGE_BUCKET_PDFS=generated-pdfs

# File upload limits (in MB)
MAX_FILE_SIZE_MB=10
MAX_ATTACHMENTS_PER_RECORD=5

# ===================================
# EMAIL (Optional - for notifications)
# ===================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=NeuroTest <noreply@neurotest.com>

# ===================================
# SECURITY
# ===================================
# Encryption key for sensitive data (CPF, clinical notes)
ENCRYPTION_KEY=your-encryption-key-min-32-chars

# Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Link expiration (in days)
REMOTE_LINK_EXPIRATION_DAYS=30

# ===================================
# PDF GENERATION
# ===================================
# PDF generation service
PDF_GENERATION_TIMEOUT_MS=10000

# ===================================
# MONITORING & LOGGING
# ===================================
# Sentry (optional)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ===================================
# FEATURE FLAGS
# ===================================
FEATURE_MANUAL_RECORDS=true
FEATURE_REMOTE_LINKS=true
FEATURE_PDF_EXPORT=true
FEATURE_AUDIT_LOGS=true
FEATURE_2FA=false

# ===================================
# DEVELOPMENT ONLY
# ===================================
# Seed database with test data
SEED_DATABASE=false
SKIP_AUTH_IN_DEV=false
